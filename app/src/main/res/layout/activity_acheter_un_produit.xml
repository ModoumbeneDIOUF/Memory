<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context="com.mind.memory.AcheterUnProduitActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relive11"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/header"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="143dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginRight="50dp"
                        android:src="@mipmap/app_logo" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="230dp"
                    android:layout_marginRight="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardUseCompatPadding="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="4dp">

                            <ImageView
                                android:id="@+id/imageAcheter"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:scaleType="centerCrop"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/repas"
                                />

                            <TextView
                                android:id="@+id/quantiteAAcheter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageAcheter"
                                android:text="Quantite"
                                android:textAlignment="center"
                                android:textSize="18dp"
                                android:textColor="@color/colorPrimaryDark"/>
                            <TextView
                                android:id="@+id/prixAAcheter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/quantiteAAcheter"
                                android:text="Prix"
                                android:textAlignment="center"
                                android:textSize="18dp"
                                android:textColor="@color/colorPrimaryDark"/>
                            <TextView
                                android:id="@+id/dateExpirationAcheter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/prixAAcheter"
                                android:text="Expiration"
                                android:textAlignment="center"
                                android:layout_marginTop="2dp"
                                android:textSize="16dp"
                                android:textColor="@color/colorPrimaryDark"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rlive22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relive11"
                android:orientation="vertical">
                <Button
                    android:id="@+id/achat_btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:width="130dp"
                    android:background="@drawable/buttons"
                    android:text="Acheter"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_alignParentLeft="true" />
                <Button
                    android:id="@+id/achat_btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/achat_btn_confirm"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:width="130dp"
                    android:text="Annuler"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/annuler"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/rlive22">

                <ImageView
                    android:id="@+id/circle11"
                    android:layout_width="190dp"
                    android:layout_height="120dp"
                    android:transitionName="image"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="-100dp"
                    android:src="@drawable/circlet" />

                <ImageView
                    android:id="@+id/circle3"
                    android:layout_width="134dp"
                    android:layout_height="110dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="-50dp"
                    android:layout_marginStart="190dp"
                    android:layout_toLeftOf="@id/circle2"
                    android:src="@drawable/circlet"
                    android:layout_marginLeft="190dp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
