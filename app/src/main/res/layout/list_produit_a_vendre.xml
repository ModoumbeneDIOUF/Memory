<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewListAVendre"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/list_vente_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:src="@drawable/repas"
            />

        <TextView
            android:id="@+id/listVenteQuantite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_vente_image"
            android:text="Quantite"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/listVentePrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listVenteQuantite"
            android:text="prix:"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/listVenteDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listVentePrix"
            android:text="Date d'expiration"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>