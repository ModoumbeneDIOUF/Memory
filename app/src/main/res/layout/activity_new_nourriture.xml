<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewNourritureActivity">

    <ImageView
        android:id="@+id/select_food_pic"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:cropToPadding="false"
        android:scaleType="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/choicepic"
        />
    <EditText
        android:id="@+id/typeAliment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_food_pic"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:hint="Type de nourriture"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/input_designe"

        />
    <EditText
        android:id="@+id/provenance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeAliment"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:hint="Provenance"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/input_designe"

        />

    <EditText
        android:id="@+id/lieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/provenance"
        android:inputType="textMultiLine"
        android:layout_marginTop="6dp"
        android:padding="20dp"
        android:hint="Lieu"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/input_designe"

        />

    <EditText
        android:id="@+id/quantiteNoutiture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lieu"
        android:inputType="textMultiLine"
        android:layout_marginTop="6dp"
        android:padding="20dp"
        android:hint="Quantite de le nourriture"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/input_designe"

        />
    <Button
        android:id="@+id/btnAddNourriture"
        android:layout_marginTop="20dp"
        android:layout_below="@id/quantiteNoutiture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/bt_uisquare"
        android:text="Ajouter"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/colorWhite" />

</RelativeLayout>