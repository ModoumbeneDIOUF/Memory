<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardRecup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/imageRecueperer"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/repas"
                    />

                <TextView
                    android:id="@+id/descRecupeper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageRecueperer"
                    android:text="description"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/provenaceRecuperer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/descRecupeper"
                    android:text="provenance don"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/adresseRecupere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/provenaceRecuperer"
                    android:text="Adresse"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/numRecupere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/adresseRecupere"
                    android:text="numero"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/tempsRestantRecuperer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/numRecupere"
                    android:text="jour restant"
                    android:textAlignment="center"
                    android:layout_marginTop="2dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimaryDark"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_recup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:width="130dp"
            android:background="@drawable/buttons"
            android:text="RÃ©cuperer"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true" />
        />

        <Button
            android:id="@+id/btn_cancel_recup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_recup"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:width="130dp"
            android:text="Annuler"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/annuler" />
    </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>