<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nom_responsable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du responsable"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:textColor="#000"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/adresse_responsable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/nom_responsable"
            android:text="adresse"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/numero_responsable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adresse_responsable"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"
            android:text="numero"
            tools:ignore="RtlCompat" />

    </LinearLayout>


</android.support.v7.widget.CardView>